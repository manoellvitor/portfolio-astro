---
import socialMedias from "@/projects_data/socialMedias";

import { Icon } from "astro-icon";
---

<header
  class="border-b-8 border-lime-700 sticky top-0 left-0 overflow-hidden bg-zinc-950"
>
  <div
    class="sm:max-w-[1200px] md:h-28 h-32 mx-auto flex flex-col md:flex-row items-center justify-around md:justify-between md:px-10"
  >
    <div>
      <a href="/" class="font-ocra text-4xl text-zinc-300">
        MANOEL LOPES<span class="animate-ping-fast">_</span>
      </a>
    </div>
    <nav>
      <div>
        <ul class="flex gap-4">
          {
            socialMedias.map((media) => {
              return (
                <li>
                  <a
                    href={media.url}
                    target="_blank"
                    class="font-courier text-sm"
                    title={media.name}
                    data-tooltip-placement="bottom"
                  >
                    <Icon
                      className="text-zinc-500  transition-colors duration-500 hover:text-zinc-300"
                      name={media.icon}
                      size={32}
                    />
                  </a>
                </li>
              );
            })
          }
        </ul>
      </div>
    </nav>
  </div>
</header>
