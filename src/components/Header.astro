---
import socialMedias from "@/projects_data/socialMedias";

import { Icon } from "astro-icon";
---

<header
  class="font-ocra text-lg font-semibold text-zinc-50 border-b-8 border-lime-700 sticky top-0 left-0 overflow-hidden bg-zinc-950"
>
  <div
    class="flex flex-row max-w-[1200px] h-28 mx-auto justify-between items-center"
  >
    <div>
      <h1 class="text-4xl font-bold text-zinc-200">
        MANOEL LOPES<span class="animate-ping-fast">_</span>
      </h1>
    </div>
    <nav>
      <div>
        <ul class="flex gap-4 text-lg">
          {
            socialMedias.map((media) => {
              return (
                <li>
                  <a
                    href={media.url}
                    target="_blank"
                    title={media.name}
                    data-tooltip-placement="bottom"
                  >
                    <Icon
                      className="text-zinc-500  transition-colors duration-500 hover:text-zinc-300"
                      name={media.icon}
                      size={32}
                    />
                  </a>
                </li>
              );
            })
          }
        </ul>
      </div>
    </nav>
  </div>
</header>
